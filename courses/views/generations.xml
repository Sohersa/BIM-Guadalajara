<odoo>
    <data>

        <!-- form view -->
        <record model="ir.ui.view" id="generations_form_view">
          <field name="name">courses.generations.view.form</field>
          <field name="model">courses.generations</field>
          <field name="arch" type="xml">
            <form>
              <header/>
              <sheet string="Generaciones">
                  <div class="oe_title">
                      <h1>
                          <field name="name" required="1" placeholder="Nombre..."/>
                      </h1>
                  </div>
                  <group>
                      <group>
                          <field name="course_id"/>
                      </group>
                      <group>
                          <field name="category"/>
                      </group>
                  </group>
                  <notebook>
                      <page string="Lista de Alumnos">
                        <group>
                            <field name="student_ids" force_save="True" attrs="{}" on_change="1" nolabel="1"/>
                        </group>
                      </page>
                      <page string="InformaciÃ³n">
                        <group>
                            <group>
                                <field name="students_count"/>
                            </group>
                            <group>
                                <field name="in_course_count"/>
                                <field name="pending_project_total"/>
                                <field name="approved_count"/>
                                <field name="failed_count"/>
                            </group>
                        </group>
                      </page>
                  </notebook>
                  <group>
                    <field name="notes" placeholder="Escriba sus notas aquÃ­ ..." nolabel="1"/>
                  </group>
              </sheet>
            </form>
          </field>
        </record>

        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="generations_list">
          <field name="name">generations list</field>
          <field name="model">courses.generations</field>
          <field name="arch" type="xml">
            <tree>
              <field name="name"/>
              <field name="course_id"/>
              <field name="students_count"/>
              <field name="category"/>
            </tree>
          </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="generations_action_window">
          <field name="name">Generations</field>
          <field name="res_model">courses.generations</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Este curso no tiene generaciones. Cree una.</p>
          </field>
        </record>

        <!-- menu categories -->
        <menuitem name="Generations" id="courses_menu_gens" parent="courses_menu_root" action="generations_action_window"/>

    </data>
</odoo>