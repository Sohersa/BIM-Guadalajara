<odoo>
    <data>

    <!-- GENERATIONS form view -->
      <record model="ir.ui.view" id="generations_form_view">
        <field name="name">courses.generations.view.form</field>
        <field name="model">courses.generations</field>
        <field name="arch" type="xml">
          <form>
            <header>
              <button name="start_course" string="Empezar" type="object"/>
              <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
            </header>
            <sheet string="Generaciones">
              <div class="oe_button_box" name="button_box">
                <button class="oe_stat_button" type="object" name="action_view_sessions" icon="fa-calendar">
                    <div class="o_stat_info">
                        <field string="Sesiones" name="session_count" class="o_stat_value" modifiers="{'readonly':true}"/>
                    </div>
                </button>
                <button class="oe_stat_button" type="object" name="action_view_assignments" icon="fa-file-o">
                    <field string="Tareas" name="assignment_count" widget="statinfo" modifiers="{'readonly':true}"/>
                </button>
              </div>
              <div class="oe_title">
                <h1>
                  <field name="name" required="1" placeholder="Nombre..."/>
                </h1>
              </div>
              <group>
                <group>
                  <field name="course_id" required="True"/>
                </group>
                <group>
                  <field name="category"/>
                </group>
                <group>
                  <field name="speaker" required="True"/>
                </group>
              </group>
              <notebook>
                <page string="Lista de Alumnos">
                  <field name="student_ids" force_save="True" attrs="{}" on_change="1" nolabel="1">
                    <tree>
                      <field name="name" string="Nombre"/>
                      <field name="state"/>
                      <field name="grade"/>
                    </tree>
                    <form>
                      <sheet string="Alumnos">
                          <div class="oe_title">
                              <h1>
                                  <field name="name" required="1" placeholder="Nombre..."/>
                                  <field name="grade" string="Calificación" attrs="{'invisible': [('name' != False)]}"/>
                              </h1>
                          </div>
                          <group>
                              <group>
                                  <h2>
                                  </h2>
                              </group>
                          </group>
                          <notebook>
                              <page string="Contacto">
                                  <group>
                                      <group>
                                          <field name="partner_id"/>
                                          <field name="partner_email" attrs="{'readonly': False}"/>
                                          <field name="partner_phone" attrs="{'readonly': False}"/>
                                          <field name="partner_company" attrs="{'readonly': False}"/>
                                      </group>
                                      <group>
                                          <field name="partner_title" attrs="{'readonly': False}"/>
                                          <field name="partner_function" attrs="{'readonly': False}"/>
                                          <field name="partner_country" attrs="{'readonly': False}"/>
                                          <field name="partner_city" attrs="{'readonly': False}"/>
                                      </group>
                                  </group>
                              </page>
                              <page string="Información Académica">
                                  <group>
                                      <group>
                                          <field name="group_id"/>
                                      </group>
                                      <group>
                                          <field name="state"/>
                                          <field name="origin"/>
                                      </group>
                                  </group>
                              </page>
                          </notebook>
                          <group>
                              <field name="notes" placeholder="Escriba sus notas aquí ..." nolabel="1"/>
                          </group>
                      </sheet>
                    </form>
                  </field>
                </page>
                <page string="Equipos">
                    <field name="team_ids" force_save="True" attrs="{}" on_change="1" nolabel="1">
                        <form>
                          <sheet string="Equipos">
                              <div class="oe_title">
                                  <h1>
                                      <field name="name" required="1" placeholder="Nombre..."/>
                                  </h1>
                              </div>
                              <group string="Integrantes">
                                  <field name="student_ids" force_save="True" attrs="{}" on_change="1" nolabel="1"/>
                              </group>
                          </sheet>
                        </form>
                    </field>
                </page>
                <page string="Agenda">
                   <group>
                      <field name="total_hours"/>
                      <field name="total_days"/>
                      <field name="total_weeks"/>
                  </group>
                  <group>
                      <field name="start_date"/>
                  </group>
                </page>
                <page string="Información">
                  <group>
                    <group>
                      <field name="students_count"/>
                    </group>
                    <group>
                      <field name="in_course_count"/>
                      <field name="pending_project_total"/>
                      <field name="approved_count"/>
                      <field name="failed_count"/>
                    </group>
                  </group>
                </page>
              </notebook>
              <group>
                <field name="notes" placeholder="Escriba sus notas aquí ..." nolabel="1"/>
              </group>
            </sheet>
          </form>
        </field>
      </record>

        <!-- SESSIONS form view -->
      <record model="ir.ui.view" id="sessions_form_view">
        <field name="name">courses.generations.sessions.view.form</field>
        <field name="model">courses.generations.sessions</field>
        <field name="arch" type="xml">
          <form>
            <sheet string="Sesiones">
              <div class="oe_title">
                <h1>
                  <field name="name" required="1" placeholder="Nombre..."/>
                </h1>
              </div>
              <group>
              </group>
            </sheet>
          </form>
        </field>
      </record>

    <!-- GENERATIONS explicit list view definition -->
      <record model="ir.ui.view" id="generations_list">
        <field name="name">generations list</field>
        <field name="model">courses.generations</field>
        <field name="arch" type="xml">
          <tree>
            <field name="name"/>
            <field name="course_id"/>
            <field name="students_count"/>
            <field name="category"/>
          </tree>
        </field>
      </record>


    <!-- GENERATIONS actions -->
      <record model="ir.actions.act_window" id="generations_action_window">
        <field name="name">Generations</field>
        <field name="res_model">courses.generations</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">Este curso no tiene generaciones. Cree una.</p>
        </field>
      </record>

    <!-- GENERATIONS menu categories -->
      <menuitem name="Generaciones" id="courses_menu_gens" parent="courses_menu_root" action="generations_action_window"/>

    </data>
</odoo>