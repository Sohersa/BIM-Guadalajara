<odoo>
  <data>

      <!-- STUDENT form view -->
    <record model="ir.ui.view" id="students_form_view">
      <field name="name">courses.students.view.form</field>
      <field name="model">courses.students</field>
      <field name="arch" type="xml">
        <form>
          <sheet string="Alumnos">
              <div class="oe_title">
                  <h1>
                      <field name="name" required="1" placeholder="Nombre..."/>
                  </h1>
              </div>
              <notebook>
                  <page string="Contacto">
                      <group>
                          <group>
                              <field name="partner_id"/>
                              <field name="partner_email" attrs="{'readonly': False}"/>
                              <field name="partner_phone" attrs="{'readonly': False}"/>
                              <field name="partner_company" attrs="{'readonly': False}"/>
                          </group>
                          <group>
                              <field name="partner_title" attrs="{'readonly': False}"/>
                              <field name="partner_function" attrs="{'readonly': False}"/>
                              <field name="partner_country" attrs="{'readonly': False}"/>
                              <field name="partner_city" attrs="{'readonly': False}"/>
                          </group>
                      </group>
                  </page>
                  <page string="Información Académica">
                      <group>
                          <group>
                              <field name="generation_id"/>
                              <field name="group_id"/>
                          </group>
                          <group>
                              <field name="state"/>
                              <field name="origin"/>
                          </group>
                      </group>
                  </page>
              </notebook>
              <group>
                  <field name="notes" placeholder="Escriba sus notas aquí ..." nolabel="1"/>
              </group>
          </sheet>
          <!-- <div class="oe_chatter" name="oe_chatter">
            <field name="message_follower_ids" id="message_follower_ids"/>
            <field name="message_ids" id="message_ids"/>
            <field name="activity_ids" id="activity_ids"/>
          </div> -->
        </form>
      </field>
    </record>

    <!-- GROUP form view -->
    <record model="ir.ui.view" id="group_form_view">
      <field name="name">courses.students.groups.view.form</field>
      <field name="model">courses.student_groups</field>
      <field name="inherit_id" ref="courses.students_form_view"/>
      <field name="arch" type="xml">
        <form>
          <header/>
          <sheet string="Grupos">
              <div class="oe_title">
                  <h1>
                      <field name="name" required="1" placeholder="Nombre..."/>
                  </h1>
              </div>
              <group>
                  <group>
                      <field name="partner_id" string="Representante"/>
                      <field name="generation_id"/>
                  </group>
              </group>

              <notebook>
                  <page string="Alumnos">
                    <xpath expr="//field[@name='group_id']" position="attributes">
                        <attribute name="invisible"/>
                    </xpath>
                  </page>
                  <page string="Información">
                       <group>
                        <group>
                          <field name="students_count"/>
                        </group>
                        <group>
                          <field name="in_course_count"/>
                          <field name="pending_project_total"/>
                          <field name="approved_count"/>
                          <field name="failed_count"/>
                        </group>
                      </group>
                  </page>
              </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <!-- TEAM form view -->
    <record model="ir.ui.view" id="team_form_view">
      <field name="name">courses.students.teams.view.form</field>
      <field name="model">courses.student_teams</field>
      <field name="arch" type="xml">
        <form>
          <header/>
          <sheet string="Equipos">
              <div class="oe_title">
                  <h1>
                      <field name="name" required="1" placeholder="Nombre..."/>
                  </h1>
              </div>
              <group>
                  <field name="generation_id"/>
              </group>
              <group string="Integrantes">
                  <field name="student_ids" force_save="True" attrs="{}" on_change="1" nolabel="1"/>
              </group>
          </sheet>
        </form>
      </field>
    </record>

      <!-- STUDENT search view -->
    <record model="ir.ui.view" id="students_search_view">
        <field name="name">courses.students.view.search</field>
        <field name="model">courses.students</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <field name="name"/>
            </search>
        </field>
    </record>

      <!-- GROUP search view -->
    <record model="ir.ui.view" id="groups_search_view">
        <field name="name">courses.student.groups.view.search</field>
        <field name="model">courses.student_groups</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <field name="name"/>
            </search>
        </field>
    </record>

      <!-- TEAM search view -->
    <record model="ir.ui.view" id="students_search_view">
        <field name="name">courses.students.teams.view.search</field>
        <field name="model">courses.student_teams</field>
        <field name="arch" type="xml">
            <search string="Search Description">
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- STUDENT explicit list view definition -->
    <record model="ir.ui.view" id="students_list">
      <field name="name">students list</field>
      <field name="model">courses.students</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="generation_id"/>
          <field name="origin"/>
          <field name="diploma"/>
        </tree>
      </field>
    </record>

      <!-- GROUP explicit list view definition -->
    <record model="ir.ui.view" id="groups_list">
      <field name="name">groups list</field>
      <field name="model">courses.student_groups</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="partner_id"/>
          <field name="generation_id"/>
        </tree>
      </field>
    </record>

      <!-- GROUP explicit list view definition -->
    <record model="ir.ui.view" id="groups_list">
      <field name="name">teams list</field>
      <field name="model">courses.student_teams</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="team_members"/>
          <field name="team_grade"/>
        </tree>
      </field>
    </record>

      <!-- STUDENT actions-->
    <record model="ir.actions.act_window" id="students_action_window">
      <field name="name">Students</field>
      <field name="res_model">courses.students</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Esta generación no tiene alumnos. Agregue uno.</p>
      </field>
    </record>

      <!-- GROUP actions -->
    <record model="ir.actions.act_window" id="groups_action_window">
      <field name="name">Groups</field>
      <field name="res_model">courses.student_groups</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">No hay grupos. Agregue uno.</p>
      </field>
    </record>

      <!-- TEAMS actions -->
    <record model="ir.actions.act_window" id="teams_action_window">
      <field name="name">Teams</field>
      <field name="res_model">courses.student_teams</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">No hay equipos. Agregue uno.</p>
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Alumnos" id="students_menu_root" parent="courses_menu_root"/>

    <!-- menu categories -->
    <menuitem name="Lista" id="courses_menu_students" parent="students_menu_root" action="students_action_window"/>
    <menuitem name="Grupos" id="courses_menu_groups" parent="students_menu_root" action="groups_action_window"/>
    <menuitem name="Equipos" id="courses_menu_teams" parent="students_menu_root" action="teams_action_window"/>

  </data>
</odoo>