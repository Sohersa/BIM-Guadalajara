<odoo>
    <data>
        <!-- explicit list view definition -->
        <record model="ir.ui.view" id="students_list">
          <field name="name">students list</field>
          <field name="model">courses.students</field>
          <field name="arch" type="xml">
            <tree>
              <field name="name"/>
              <field name="email"/>
              <field name="phone"/>
              <field name="contry"/>
              <field name="city"/>
              <field name="function"/>
              <field name="title"/>
              <field name="company"/>
              <field name="generation_id"/>
              <field name="origin"/>
            </tree>
          </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="students_action_window">
          <field name="name">Students</field>
          <field name="res_model">courses.students</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Esta generaciÃ³n no tiene alumnos. Agregue uno.</p>
          </field>
        </record>
        
        <!-- Top menu item -->
        <menuitem name="Students" id="students_menu_root"/>

        <!-- menu categories -->
        <menuitem name="Students" id="courses_menu_students" parent="courses_menu_root" action="students_action_window"/>
        
    </data>
</odoo>    
