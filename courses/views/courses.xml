<odoo>
  <data>
      
    <!-- tree views -->
    <record model="ir.ui.view" id="courses_list">
      <field name="name">courses list</field>
      <field name="model">courses.courses</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="students_total"/>
          <field name="in_course_total"/>
          <field name="pending_project_total"/>
          <field name="approved_total"/>
          <field name="failed_total"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="courses_list_window">
      <field name="name">Courses</field>
      <field name="res_model">courses.courses</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">No hay ningÃºn curso. Agregue uno.</p>
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Courses" id="courses_menu_root"/>

    <!-- menu categories -->
    <menuitem name="Courses" id="courses_menu_courses" parent="courses_menu_root" action="courses_list_window"/>

  </data>
</odoo>