<odoo>
  <data>

    <!-- form views -->
    <record model="ir.ui.view" id="courses_form_view">
      <field name="name">courses.courses.view.form</field>
      <field name="model">courses.courses</field>
      <field name="arch" type="xml">
        <form>
          <header/>
          <sheet string="Cursos">
            <field class="oe_avatar" widget="image" name="photo"/>
            <div class="oe_title">
                <h1>
                    <field name="name" required="1" placeholder="Nombre..."/>
                </h1>
            </div>
            <group string="Generaciones">
              <field name="generations_ids" force_save="True" attrs="{}" on_change="1" nolabel="1"/>
            </group>
            <group>
              <field name="generations_count" string="Total de Generaciones:"/>
            </group>
            <group>
              <field name="notes" placeholder="Escriba sus notas aquÃ­ ..." nolabel="1"/>
            </group>
            <!-- <div class="oe_chatter" name="oe_chatter" modifiers="{}">
              <field name="message_follower_ids" id="message_follower_ids"/>
              <field name="message_ids" id="message_ids"/>
              <field name="activity_ids" id="activity_ids"/>
            </div> -->
          </sheet>
        </form>
      </field>
    </record>


    <!-- tree views -->
    <record model="ir.ui.view" id="courses_list">
      <field name="name">courses list</field>
      <field name="model">courses.courses</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="students_total"/>
          <field name="in_course_total"/>
          <field name="pending_project_total"/>
          <field name="approved_total"/>
          <field name="failed_total"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="courses_list_window">
      <field name="name">Courses</field>
      <field name="res_model">courses.courses</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">No hay ningÃºn curso. Agregue uno.</p>
      </field>
    </record>

    <!-- Top menu item -->
    <menuitem name="Courses" id="courses_menu_root"/>

    <!-- menu categories -->
    <menuitem name="Courses" id="courses_menu_courses" parent="courses_menu_root" action="courses_list_window"/>

  </data>
</odoo>