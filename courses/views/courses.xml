<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="courses_list">
      <field name="name">courses list</field>
      <field name="model">courses.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="students_total"/>
          <field name="in_course_total"/>
          <field name="pending_project_total"/>
          <field name="approved_total"/>
          <field name="failed_total"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="courses_action_window">
      <field name="name">Courses</field>
      <field name="res_model">courses.course</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

     <record model="ir.actions.server" id="courses_action_server">
      <field name="name">courses server</field>
      <field name="model_id" ref="model_courses_course"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Courses" id="courses_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Courses" id="courses_menu_courses" parent="courses_menu_root"/>
    <!-- <menuitem name="Menu 2" id="courses.menu_2" parent="courses.menu_root"/> -->

    <!-- actions -->

    <menuitem name="List" id="courses_menu_courses_list" parent="courses_menu_courses"
              action="courses_action_window"/>
      
    <!-- <menuitem name="Server to list" id="courses" parent="courses.menu_2"
              action="courses.action_server"/> -->

  </data>
</odoo>